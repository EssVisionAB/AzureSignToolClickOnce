<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net7.0-windows</TargetFramework>
		<OutputType>EXE</OutputType>
	</PropertyGroup>
	<PropertyGroup>
		<PackageId>AzureSignToolClickOnce</PackageId>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.0.1</Version>
		<Authors>Sokigo AB</Authors>
		<AssemblyVersion>1.0.1.0</AssemblyVersion>
		<RepositoryUrl>https://github.com/EssVisionAB/AzureSignToolClickOnce</RepositoryUrl>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	</PropertyGroup>
	<ItemGroup>
	  <PackageReference Include="Azure.Identity" Version="1.10.4" />
	  <PackageReference Include="Azure.Security.KeyVault.Certificates" Version="4.5.1" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
	  <PackageReference Include="RSAKeyVaultProvider" Version="2.1.1" />
	  <PackageReference Include="System.Security.Cryptography.Xml" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="Properties\" />
	</ItemGroup>
</Project>

